{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Frontend: npm run dev",
        "type": "shell",
        "command": "npm",
        "args": ["run", "dev"],
        "options": {
          "cwd": "${workspaceFolder}/frontend"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Backend: flask run --debug",
        "type": "shell",
        "command": "flask",
        "args": ["run", "--debug"],
        "options": {
          "cwd": "${workspaceFolder}/backend"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  